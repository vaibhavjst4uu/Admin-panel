<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>user table</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <style>
      .newRole {
        float: right;
        margin-right: 4vw;
        margin-bottom: 2vh;
      }
      .action {
        display: flex;
        /* justify-content: center; */
        justify-content: space-around;
      }
      .mytable {
        text-align: center;
      }
      .Abtn {
        border: none;
        background-color: inherit;
      }
      .Abtn:hover {
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <h2 class="float-start ml-4">Permissions List</h2>
    <a
      href="#"
      class="btn btn-primary float-end mt-n1 button newRole"
      data-toggle="modal"
      data-target="#exampleModa"
      ><i class="fas fa-plus"></i> New Permission</a
    >
    <table class="table table-hover mytable">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">SLUG</th>
          <th scope="col">Module_name</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% Permissions.forEach((permission)=>{ %>
        <tr>
          <th scope="row"><%= permission.id %></th>
          <td><%= permission.name %></td>
          <td><%= permission.slug %></td>
          <td><%= permission.Module_name %></td>
          <td class="action">
            <div class="mb-2 ml-3 w-30">
              <button
                class="Abtn edit-button"
                data-toggle="modal"
                data-target="#exampleModa"
                data-permission='<%- JSON.stringify(permission) || {} %>'
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="feather feather-edit align-middle me-2"
                >
                  <path
                    d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"
                  ></path>
                  <path
                    d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"
                  ></path>
                </svg>
                <span class="align-middle">edit</span>
              </button>
            </div>

            <div class="mb-2 mr-0 w-30">
              <button
                class="Abtn delete-button"
                data-toggle="modal"
                data-target="#exampleModal"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="feather feather-delete align-middle me-2"
                >
                  <path
                    d="M21 4H8l-7 8 7 8h13a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2z"
                  ></path>
                  <line x1="18" y1="9" x2="12" y2="15"></line>
                  <line x1="12" y1="9" x2="18" y2="15"></line>
                </svg>
                <span class="align-middle">delete</span>
              </button>
              <form
                class="delete-form"
                method="post"
                action="/permission/delete/<%= permission.id %>?_method=DELETE"
              >
                <!-- Hidden input to include the user ID in the form data -->
                <input type="hidden" name="_method" value="delete" />
              </form>
            </div>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Modal for edit and new -->
    <div
      class="modal fade"
      id="exampleModa"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="createPermissionTitle">
              Create New Permission
            </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="/permission/create" method="post" id="permissionForm">
              <div class="form-group">
                <label for="Module_name" class="col-form-label"
                  >Module Name:</label
                >
                <input
                  type="text"
                  class="form-control"
                  name="Module_name"
                  id="Module_name"
                />
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-dismiss="modal"
                >
                  Close
                </button>
                <button type="/submit" class="btn btn-primary">
                  Save Details
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Function to set user data in the form
      function setUserData(user) {
        const form = document.getElementById("permissionForm");
        const moduleNameInput = form.querySelector("#Module_name");
        const title = document.getElementById("createPermissionTitle");


        // Set values in the form
        moduleNameInput.value = user.Module_name || "";
        title.innerText = "Update Permission";

      }

      // Event listener for edit buttons
      document.querySelectorAll(".edit-button").forEach(function (button) {
        button.addEventListener("click", function () {
          // Get the user data from the data-user attribute
          const userData = JSON.parse(this.getAttribute("data-permission"));
          console.log(userData);
          setUserData(userData);

          // Set the form action for editing
          const form = document.getElementById("permissionForm");
          form.action = `/permission/update/${userData.id}?_method=PATCH`;

          // Show the modal
        });
      });
    </script>

    <!-- SweetAlert2 for delete-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
      const deleteForms = document.querySelectorAll(".delete-form");
      const deleteButtons = document.querySelectorAll(".delete-button");

      deleteButtons.forEach((button, index) => {
        button.addEventListener("click", () => {
          Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!",
          }).then((result) => {
            if (result.isConfirmed) {
              // Trigger the form submission for the corresponding delete form
              swal.fire({
                title: "Deleted!",
                text: "Your file has been deleted.",
                icon: "success",
              });
              setTimeout(() => {
                deleteForms[index].submit();
              }, 1000);
            }
          });
        });
      });
    </script>

    <script src="/js/app.js"></script>
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
